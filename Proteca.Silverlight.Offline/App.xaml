<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
               xmlns:Services="clr-namespace:Jounce.Framework.Services;assembly=Jounce"
               xmlns:app="clr-namespace:Proteca.Silverlight"
             x:Class="Proteca.Silverlight.App"
             >
    <Application.ApplicationLifetimeObjects>
        <Services:ApplicationService/>
    </Application.ApplicationLifetimeObjects>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <app:ApplicationResources x:Key="ApplicationResources" />
                </ResourceDictionary>
                <ResourceDictionary Source="Assets/Styles.xaml"/>
                <ResourceDictionary Source="Assets/GridView.xaml"/>
                <ResourceDictionary Source="Assets/GridViewCell.xaml"/>
                <ResourceDictionary Source="Assets/Boutons.xaml"/>
                <ResourceDictionary Source="Assets/TileView.xaml"/>
                <ResourceDictionary Source="Assets/Chart.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
